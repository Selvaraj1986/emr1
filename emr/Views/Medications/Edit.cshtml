@model emr.Models.Model.MedicationsModel
<div class="container-fluid">
    <div class="row" style="margin-top:20px;">
        <div class="breadcrumb">
            <a href="/emr/"><i class="fa fa-home fa-lg"></i> Home</a>/<a href="/Medications">Medication</a>/<a href="/Medications/view/@Model.id">
                @Model.generic
            </a>/<a href="/Medications/edit/@Model.id">Edit</a>
        </div>
        <h1>Edit Medication</h1>
        <div class="row-fluid">
            <form asp-action="Update">
                <div class="col-md-8">
                    <div role="tabpanel">
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs" role="tablist">
                            <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Medication</a></li>
                        </ul>

                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active" id="home">
                                <div class="form-group required">
                                    <label for="MedicationGeneric" class="control-label">Generic</label>
                                    <input type="hidden" asp-for="id" />
                                    <input type="hidden" asp-for="creator_id" />
                                    <input type="hidden" asp-for="created" />
                                    <input asp-for="generic" class="form-control" />
                                    <span asp-validation-for="generic" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    <label for="MedicationBrand" class="control-label">Brand</label>
                                    <input asp-for="brand" class="form-control" />
                                    <span asp-validation-for="brand" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    <label for="MedicationClassification" class="control-label">Classification</label>
                                    <input asp-for="classification" class="form-control" />
                                    <span asp-validation-for="classification" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="col-md-4">
                    <div class="well" style="margin-top:40px;">
                        <div style="font-weight:bold; margin-bottom:15px;"><i class="fa fa-list"></i> Actions</div>
                        <div>
                            <input class="btn btn-success btn-sm" type="submit" value="Save Medication">
                            <a href="/Medications/view/@Model.id" class="btn btn-danger btn-sm">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>