@model emr.Models.Model.PatientsModel
<div class="container-fluid">
    <div class="row" style="margin-top:20px;">
        <div class="breadcrumb">
            <a href="/emr/"><i class="fa fa-home fa-lg"></i> Home</a>/
            <a href="/Patients">Patients</a>/
            <a href="/Patients/view/@Model.id">@Model.first_name &nbsp @Model.last_name</a>/
            <a href="/Patients/edit/@Model.id">Edit Weight</a>
        </div>

        <div class="row-fluid">
            <form asp-action="Update">
                <div class="col-md-8">

                    <div role="tabpanel">
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs" role="tablist">
                            <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Patient Weight</a></li>
                        </ul>

                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active" id="home">
                                <div class="form-group">
                                    <label for="PatientWeightRecordDate" class="control-label">Record Date</label>
                                    <input type="hidden" asp-for="weightsModel.id" />
                                    <input asp-for="weightsModel.record_date" class="form-control" />
                                    <span asp-validation-for="@Model.weightsModel.record_date" class="text-danger"></span>
                                </div>
                                <div class="form-group required">
                                    <label for="PatientWeightWeight" class="control-label">Weight</label>
                                    <input asp-for="weightsModel.weight" class="form-control" step="any" type="number" id="PatientWeightWeight" />
                                    <span asp-validation-for="@Model.weightsModel.weight" class="text-danger"></span>

                                </div>
                                <div class="form-group required">
                                    <label for="PatientWeightWeightUnit" class="control-label">Weight Unit</label>
                                    <select id="weightsModel.weight_unit" class="form-control col-md-8" name="weightsModel.weight_unit"
                                            asp-for="@Model.weightsModel.weight_unit">
                                        <option value="">-- Choose Weight Unit --</option>
                                        <optgroup label="weight_unit">
                                            <option value="kg">kg</option>
                                            <option value="lb">lb</option>
                                        </optgroup>
                                    </select>
                                </div>

                            </div>
                        </div>

                    </div>

                </div>

                <div class="col-md-4">
                    <div class="well" style="margin-top:40px;">
                        <div style="font-weight:bold; margin-bottom:15px;"><i class="fa fa-list"></i> Actions</div>
                        <div>
                            <input class="btn btn-success btn-sm" type="submit" value="Save Weight">				<a href="/emr/general/Patients/view/4210/weights" class="btn btn-danger btn-sm">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>